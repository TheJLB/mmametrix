<%= form_for :referee, url: referee_path(@referee), method: :put do |r| %>

  <div class="form-group col-md-8">
    <label for="name" class="col-md-3 control-label">Referee Name:</label>
    <div class="col-md-6">
      <%= r.text_field :name, :class=> "form-control", :value=>params[:name], :id=> "name" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="date" class="col-md-3 control-label">Fight Count:</label>
    <div class="col-md-6">
      <%= r.text_field :fights, :format => :short, :class=> "form-control", :value=>params[:fights], :id=> "Fights" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="org" class="col-md-3 control-label">Avg. Fight Time:</label>
    <div class="col-md-6">
      <% aft = params[:avg_fight_time].to_s %>
      <%= r.text_field :avg_fight_time, :class=> "form-control", :value=> Time.parse(aft).strftime("%M:%S"), :id=> "Avg Fight Time" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="location" class="col-md-3 control-label">KO/TKO %:</label>
    <div class="col-md-6">
      <%= r.text_field :ko_tko, :class=> "form-control", :value=>params[:ko_tko], :id=> "KO_TKO" %>
    </div>
  </div>
  
  <div class="form-group col-md-8">
    <label for="location" class="col-md-3 control-label">Submission %:</label>
    <div class="col-md-6">
      <%= r.text_field :submission, :class=> "form-control", :value=>params[:submission], :id=> "Submission" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="location" class="col-md-3 control-label">Decision %:</label>
    <div class="col-md-6">
      <%= r.text_field :decision, :class=> "form-control", :value=>params[:decision], :id=> "Decision" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <div class="col-md-offset-3 col-md-8">
      <%= r.submit :class=> "btn btn-sm btn-primary" %>
      <%= link_to "Back", referees_path, :class => "btn btn-default btn-sm" %>
    </div>
  </div>

</form>

<% end %>