<div class="container">
	<div class="jumbotron">
		<div class="row">
			<div class="col-md-3"> </div>
				<div class="col-md-6">
					<h2>Sign in</h2>
					
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

					  <%= f.label :email, :for => "Input Email1" %>
					  <%= f.email_field :email, :autofocus => true, :type => "email", :class => "form-control", :id => "email" %>

					  <%= f.label :password, :for => "Password" %>
					  <%= f.password_field :password, :type => "password", :class => "form-control", :id => "password" %>

					  <% if devise_mapping.rememberable? -%>
					    <%= f.check_box :remember_me %><%= f.label :remember_me, :type => "checkbox" %>
					  <% end %>

					  <br><%= f.submit "Sign in", :type => "submit", :class => "btn btn-primary btn-xs" %> <%= render "devise/shared/links" %>
					<% end %>
				
				</div>
			</div>
		</div>
	</div>
</div>