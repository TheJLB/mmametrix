<div class="container">
	<div class="jumbotron">
		<div class="row">
			<div class="col-md-3"> </div>
				<div class="col-md-6">
				<h2>Resend unlock instructions</h2>

					<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
					  <div class="alert alert-warning"><%= devise_error_messages! %></div>

					  <%= f.label :email %>
					  <%= f.email_field :email, :autofocus => true, :type => "email", :class => "form-control", :id => "UnlockEmail" %>

					  <%= f.submit "Resend unlock instructions", :type => "submit", :class => "btn btn-primary btn-xs" %> <%= render "devise/shared/links" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>