<%= form_for :judge, url: judge_path(@judge), method: :put do |j| %>

  <div class="form-group col-md-8">
    <label for="id" class="col-md-3 control-label">ID</label>
    <div class="col-md-6">
      <%= j.text_field :id, :class=> "form-control", :value=>params[:id], :id=> "id" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="name" class="col-md-3 control-label">Judge Name</label>
    <div class="col-md-6">
      <%= j.text_field :name, :class=> "form-control", :value=>params[:name], :id=> "name" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="date" class="col-md-3 control-label">Total Decisions</label>
    <div class="col-md-6">
      <%= j.text_field :decisions_total, :format => :short, :class=> "form-control", :value=>params[:decisions_total], :id=> "Total Decisions" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="org" class="col-md-3 control-label">Unan. Decisions %</label>
    <div class="col-md-6">
      <%= j.text_field :decisions_unan, :class=> "form-control", :value=>params[:decisions_unan], :id=> "Unan Decisions" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="location" class="col-md-3 control-label">Split Decisions</label>
    <div class="col-md-6">
      <%= j.text_field :decisions_split, :class=> "form-control", :value=>params[:decisions_split], :id=> "Split Decisions" %>
    </div>
  </div>
  
  <div class="form-group col-md-8">
    <label for="location" class="col-md-3 control-label">Major Decisions</label>
    <div class="col-md-6">
      <%= j.text_field :decisions_major, :class=> "form-control", :value=>params[:decisions_major], :id=> "Major Decisions" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <label for="location" class="col-md-3 control-label">Draws</label>
    <div class="col-md-6">
      <%= j.text_field :draws, :class=> "form-control", :value=>params[:draws], :id=> "Draws" %>
    </div>
  </div>

  <div class="form-group col-md-8">
    <div class="col-md-offset-3 col-md-8">
      <%= j.submit :class=> "btn btn-sm btn-primary" %>
      <%= link_to "Back", judges_path, :class => "btn btn-default btn-sm" %>
    </div>
  </div>

</form>

<% end %>